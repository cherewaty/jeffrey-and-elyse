<div class="row middle-xs center-xs rsvp-header">
	<div class="col-xs-6">
		<h1>RSVP</h1>
		<h6>by March 20, por favor</h6>
	</div>
</div>


<div class="row middle-xs center-xs">
	<div class="col-xs-6">

		<div class="rsvp-error-message">{{message}}</div>

		<div class="content rsvp-content">
		  <form action="/rsvp" method="post" id="rsvp-form">
			 <p>
				  <label for="name">Names</label>
				  <br>
				  <input name="names" type="text" value="" id="names">
			</p>

			<p>
			  <label><input type="radio" name="coming" value="yes"> Wouldn't miss it!</label>
			  <br/>
			  <label><input type="radio" name="coming" value="no"> Regretfully decline</label>
			</p>

			<p>
			  <label for "comments">Anything else?</label>
			  <br>
			  <textarea name="comments" cols="40" rows="10" id="comments"></textarea>
			</p>
			<p>
			  <input type="submit" type="submit" value="Send RSVP" id="submit">
			</p>
		  </form>
		</div>

	</div>
</div>
